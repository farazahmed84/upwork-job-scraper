{
    "manifest_version": 3,
    "name": "Upwork Job Scraper",
    "homepage_url": "https://freelancetaskinsights.com/",
    "version": "1.1",
    "description": "Extract job titles and descriptions from Upwork search results and export as CSV.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.upwork.com/nx/search/jobs/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.upwork.com/nx/search/jobs/*"],
            "js": ["content.js"]
        }
    ]
}
